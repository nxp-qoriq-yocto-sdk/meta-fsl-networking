+int dpa_macsec_get_revision(int macsec_id)
+{
+	int msg_size;
+	int rv;
+	int revision;
+
+	rv = dpa_connect();
+	if(rv != 0) {
+		return -1;
+	}
+
+	nlh->nlmsg_seq = GET_REVISION;
+
+	gen.chf = GET_REVISION;
+	gen.payload.macsec_id = macsec_id;
+
+	msg_size = sizeof(gen);
+	memcpy(NLMSG_DATA(nlh), &gen, msg_size);
+
+	rv = send_recv();
+	if(rv != 0) {
+		return -1;
+	}
+
+	revision = *(int *)(NLMSG_DATA(nlh));
+
+	return revision;
+}
